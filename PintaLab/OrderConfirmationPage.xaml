<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PintaLab.OrderConfirmationPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Vahvista tilaus">

    <Grid BackgroundColor="#F8F9FA" Padding="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- Left panel - order details -->
        <Frame Grid.Column="0"
               BackgroundColor="White" 
               CornerRadius="15" 
               Padding="20"
               HasShadow="True"
               BorderColor="#E9ECEF"
               Margin="0,0,10,0">
            <StackLayout Spacing="20">
                <!-- Header section -->
                <Grid ColumnDefinitions="Auto, *, Auto">
                    <Button Text="← Takaisin" 
                            Clicked="OnBackClicked"
                            BackgroundColor="Transparent"
                            TextColor="#2C7873"
                            FontSize="14"
                            HorizontalOptions="Start"
                            WidthRequest="100"/>

                    <Label Text="Tilauksen vahvistus" 
                           Grid.Column="1"
                           TextColor="#2C7873"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <Label Text="PintaLab" 
                           Grid.Column="2"
                           TextColor="#6C757D"
                           FontSize="12"
                           HorizontalOptions="End"
                           VerticalOptions="Center"/>
                </Grid>

                <!-- Order details section -->
                <StackLayout Spacing="15">
                    <Label Text="Tilauksen sisältö" 
                           TextColor="#2C7873"
                           FontSize="20"
                           FontAttributes="Bold"/>

                    <!-- Order summary -->
                    <Frame BackgroundColor="#E8F4F3" 
                           CornerRadius="10" 
                           Padding="15">
                        <Grid ColumnDefinitions="*, Auto">
                            <StackLayout>
                                <Label Text="Tuotteita:" 
                                       TextColor="#2C7873"
                                       FontSize="14"/>
                                <Label x:Name="ItemsCountLabel"
                                       Text="0 kpl"
                                       TextColor="#2C7873"
                                       FontSize="16"
                                       FontAttributes="Bold"/>
                            </StackLayout>
                            <StackLayout Grid.Column="1">
                                <Label Text="Yhteensä:" 
                                       TextColor="#2C7873"
                                       FontSize="14"/>
                                <Label x:Name="TotalCostLabel"
                                       Text="0,00 €"
                                       TextColor="#2C7873"
                                       FontSize="20"
                                       FontAttributes="Bold"/>
                            </StackLayout>
                        </Grid>
                    </Frame>

                    <!-- Products list -->
                    <CollectionView x:Name="OrderItemsCollectionView">
                        <CollectionView.Header>
                            <Label Text="Tuotteet:" 
                                   TextColor="#495057"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   Margin="0,10,0,5"/>
                        </CollectionView.Header>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#F8F9FA" 
                                       CornerRadius="8" 
                                       Padding="12"
                                       BorderColor="#E9ECEF"
                                       Margin="0,2">
                                    <Grid ColumnDefinitions="*, Auto" 
                                          RowDefinitions="Auto, Auto, Auto">
                                        <Label Text="{Binding DisplayName}" 
                                               TextColor="#2C7873"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               Grid.Row="0"/>

                                        <Label Text="{Binding Room}" 
                                               TextColor="#6C757D"
                                               FontSize="12"
                                               Grid.Row="1"/>

                                        <Label Text="{Binding Dimensions}" 
                                               TextColor="#6C757D"
                                               FontSize="12"
                                               Grid.Row="2"/>

                                        <Label Text="{Binding Material}" 
                                               TextColor="#495057"
                                               FontSize="12"
                                               Grid.Column="1"
                                               Grid.Row="0"/>

                                        <Label Text="{Binding Cost, StringFormat='{0:C}'}" 
                                               TextColor="#2C7873"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               Grid.Column="1"
                                               Grid.Row="2"
                                               HorizontalOptions="End"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </StackLayout>
        </Frame>

        <!-- Right panel - customer information -->
        <Frame Grid.Column="1"
               BackgroundColor="White" 
               CornerRadius="15" 
               Padding="20"
               HasShadow="True"
               BorderColor="#E9ECEF">
            <StackLayout Spacing="20">
                <Label Text="Asiakkaan tiedot" 
                       TextColor="#2C7873"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>

                <StackLayout Spacing="15">
                    <!-- Auto-fill section for logged-in users -->
                    <Frame x:Name="AutoFillFrame"
                           BackgroundColor="#E8F4F3" 
                           CornerRadius="10" 
                           Padding="15"
                           IsVisible="False">
                        <StackLayout Spacing="10">
                            <Label Text="Käytä kirjautuneena olevan käyttäjän tietoja:" 
                                   TextColor="#2C7873"
                                   FontSize="14"
                                   FontAttributes="Bold"/>
                            <Button x:Name="AutoFillButton"
                                    Text="Täytä tiedot automaattisesti"
                                    Clicked="OnAutoFillClicked"
                                    BackgroundColor="#2C7873"
                                    TextColor="White"
                                    CornerRadius="8"
                                    HeightRequest="40"
                                    FontSize="14"/>
                        </StackLayout>
                    </Frame>

                    <!-- Customer data fields -->
                    <Grid ColumnDefinitions="*, *" ColumnSpacing="10">
                        <StackLayout>
                            <Label Text="Etunimi *" 
                                   TextColor="#495057" 
                                   FontSize="14"
                                   FontAttributes="Bold"/>
                            <Entry x:Name="FirstNameEntry" 
                                   Placeholder="Etunimi"
                                   TextColor="#495057"
                                   BackgroundColor="#F8F9FA"
                                   HeightRequest="45"/>
                        </StackLayout>
                        <StackLayout Grid.Column="1">
                            <Label Text="Sukunimi *" 
                                   TextColor="#495057" 
                                   FontSize="14"
                                   FontAttributes="Bold"/>
                            <Entry x:Name="LastNameEntry" 
                                   Placeholder="Sukunimi"
                                   TextColor="#495057"
                                   BackgroundColor="#F8F9FA"
                                   HeightRequest="45"/>
                        </StackLayout>
                    </Grid>

                    <StackLayout>
                        <Label Text="Sähköposti *" 
                               TextColor="#495057" 
                               FontSize="14"
                               FontAttributes="Bold"/>
                        <Entry x:Name="EmailEntry" 
                               Placeholder="sahkoposti@esimerkki.fi"
                               TextColor="#495057"
                               BackgroundColor="#F8F9FA"
                               HeightRequest="45"
                               Keyboard="Email"/>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Puhelin *" 
                               TextColor="#495057" 
                               FontSize="14"
                               FontAttributes="Bold"/>
                        <Entry x:Name="PhoneEntry" 
                               Placeholder="+358 40 123 4567"
                               TextColor="#495057"
                               BackgroundColor="#F8F9FA"
                               HeightRequest="45"
                               Keyboard="Telephone"/>
                    </StackLayout>

                    <Label Text="* Pakolliset kentät" 
                           TextColor="#6C757D" 
                           FontSize="12"
                           FontAttributes="Italic"/>

                    <!-- Submit order button -->
                    <Button x:Name="SubmitButton"
                            Text="Lähetä tilaus"
                            Clicked="OnSubmitClicked"
                            BackgroundColor="#2C7873"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="50"
                            FontSize="16"
                            FontAttributes="Bold"/>
                </StackLayout>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>