<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PintaLab.MyOrdersPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Omat tilaukset">

    <Grid BackgroundColor="#F8F9FA" Padding="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header section -->
        <Frame Grid.Row="0"
               BackgroundColor="White" 
               CornerRadius="15" 
               Padding="20"
               HasShadow="True"
               BorderColor="#E9ECEF">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <Button Text="← Takaisin" 
                        Clicked="OnBackClicked"
                        BackgroundColor="Transparent"
                        TextColor="#2C7873"
                        FontSize="14"
                        HorizontalOptions="Start"/>

                <Label Text="Omat tilaukset" 
                       Grid.Column="1"
                       TextColor="#2C7873"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>

                <Label Text="PintaLab" 
                       Grid.Column="2"
                       TextColor="#6C757D"
                       FontSize="12"
                       HorizontalOptions="End"/>
            </Grid>
        </Frame>

        <!-- Orders list section -->
        <Frame Grid.Row="1"
               BackgroundColor="White" 
               CornerRadius="15" 
               Padding="20"
               HasShadow="True"
               BorderColor="#E9ECEF"
               Margin="0,10,0,0">
            <StackLayout>
                <!-- Empty state when no orders exist -->
                <StackLayout x:Name="EmptyStateLayout" 
                            IsVisible="True"
                            Spacing="15"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                    <Label Text="" 
                           FontSize="40"
                           HorizontalOptions="Center"/>
                    <Label Text="Ei tilauksia" 
                           TextColor="#6C757D"
                           FontSize="18"
                           HorizontalOptions="Center"/>
                    <Label Text="Tee ensimmäinen tilaus pääsivulta" 
                           TextColor="#6C757D"
                           FontSize="14"
                           HorizontalOptions="Center"/>
                    <Button Text="Tee tilaus"
                            Clicked="OnCreateOrderClicked"
                            BackgroundColor="#2C7873"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="45"
                            WidthRequest="150"
                            HorizontalOptions="Center"/>
                </StackLayout>

                <!-- Orders collection view -->
                <CollectionView x:Name="OrdersCollectionView"
                                IsVisible="False">
                    <CollectionView.Header>
                        <!-- Table column headers -->
                        <Grid BackgroundColor="#2C7873" 
                              Padding="15,10"
                              ColumnDefinitions="60, 100, 120, 100, 80">
                            <Label Text="Tilausnro" 
                                   TextColor="White" 
                                   FontAttributes="Bold"
                                   FontSize="12"/>
                            <Label Text="Päivämäärä" 
                                   Grid.Column="1"
                                   TextColor="White" 
                                   FontAttributes="Bold"
                                   FontSize="12"/>
                            <Label Text="Asiakas" 
                                   Grid.Column="2"
                                   TextColor="White" 
                                   FontAttributes="Bold"
                                   FontSize="12"/>
                            <Label Text="Tila" 
                                   Grid.Column="3"
                                   TextColor="White" 
                                   FontAttributes="Bold"
                                   FontSize="12"/>
                            <Label Text="Summa" 
                                   Grid.Column="4"
                                   TextColor="White" 
                                   FontAttributes="Bold"
                                   FontSize="12"/>
                        </Grid>
                    </CollectionView.Header>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <!-- Order item row template -->
                            <Grid Padding="15,10" 
                                  ColumnDefinitions="60, 100, 120, 100, 80"
                                  BackgroundColor="Transparent">
                                <Label Text="{Binding Id}" 
                                       TextColor="#495057"
                                       FontSize="12"/>
                                <Label Text="{Binding CreatedDate}" 
                                       Grid.Column="1"
                                       TextColor="#495057"
                                       FontSize="12"/>
                                <Label Text="{Binding CustomerName}" 
                                       Grid.Column="2"
                                       TextColor="#495057"
                                       FontSize="12"/>
                                <Label Text="{Binding Status}" 
                                       Grid.Column="3"
                                       TextColor="#2C7873"
                                       FontSize="12"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding TotalCost, StringFormat='{0:C}'}" 
                                       Grid.Column="4"
                                       TextColor="#2C7873"
                                       FontSize="12"
                                       FontAttributes="Bold"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>