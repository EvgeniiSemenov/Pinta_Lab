<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PintaLab.AboutPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Tietoa meistä">

    <Grid BackgroundColor="#F8F9FA" Padding="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header section -->
        <Frame Grid.Row="0"
               BackgroundColor="White" 
               CornerRadius="15" 
               Padding="20"
               HasShadow="True"
               BorderColor="#E9ECEF">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <Button Text="← Takaisin" 
                        Clicked="OnBackClicked"
                        BackgroundColor="Transparent"
                        TextColor="#2C7873"
                        FontSize="14"
                        HorizontalOptions="Start"/>

                <Label Text="Tietoa PintaLabista" 
                       Grid.Column="1"
                       TextColor="#2C7873"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>

                <Label Text="PintaLab" 
                       Grid.Column="2"
                       TextColor="#6C757D"
                       FontSize="12"
                       HorizontalOptions="End"/>
            </Grid>
        </Frame>

        <!-- Main content area -->
        <ScrollView Grid.Row="1" Margin="0,10,0,0">
            <StackLayout Spacing="15">

                <!-- Mission section -->
                <Frame BackgroundColor="White" 
                       CornerRadius="15" 
                       Padding="25"
                       HasShadow="True"
                       BorderColor="#E9ECEF">
                    <StackLayout Spacing="15">
                        <Label Text="Meidän missiomme" 
                               TextColor="#2C7873"
                               FontSize="20"
                               FontAttributes="Bold"/>
                        <Label Text="Luomme innovatiivisia kalustusratkaisuja, jotka yhdistävät modernin muotoilun, toimivuuden ja korkean laadun. Jokainen projekti on uniikki ja suunniteltu asiakkaan tarpeiden mukaan." 
                               TextColor="#495057"
                               FontSize="14"
                               LineBreakMode="WordWrap"/>
                    </StackLayout>
                </Frame>

                <!-- Values section -->
                <Frame BackgroundColor="White" 
                       CornerRadius="15" 
                       Padding="25"
                       HasShadow="True"
                       BorderColor="#E9ECEF">
                    <StackLayout Spacing="15">
                        <Label Text="Arvomme" 
                               TextColor="#2C7873"
                               FontSize="20"
                               FontAttributes="Bold"/>
                        <StackLayout Spacing="8">
                            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                                <Label Text="•" TextColor="#2C7873" FontSize="14"/>
                                <Label Text="Laadukkaat materiaalit ja työnmanship" 
                                       TextColor="#495057" FontSize="14" Grid.Column="1"/>
                            </Grid>
                            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                                <Label Text="•" TextColor="#2C7873" FontSize="14"/>
                                <Label Text="Yksilöllinen lähestymistapa jokaiseen asiakkaaseen" 
                                       TextColor="#495057" FontSize="14" Grid.Column="1"/>
                            </Grid>
                            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                                <Label Text="•" TextColor="#2C7873" FontSize="14"/>
                                <Label Text="Innovatiiviset valmistusteknologiat" 
                                       TextColor="#495057" FontSize="14" Grid.Column="1"/>
                            </Grid>
                            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                                <Label Text="•" TextColor="#2C7873" FontSize="14"/>
                                <Label Text="Ympäristöystävällisyys ja turvallisuus" 
                                       TextColor="#495057" FontSize="14" Grid.Column="1"/>
                            </Grid>
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!-- Experience section -->
                <Frame BackgroundColor="White" 
                       CornerRadius="15" 
                       Padding="25"
                       HasShadow="True"
                       BorderColor="#E9ECEF">
                    <StackLayout Spacing="15">
                        <Label Text="Kokemuksemme" 
                               TextColor="#2C7873"
                               FontSize="20"
                               FontAttributes="Bold"/>
                        <Label Text="Yli 5 vuoden ajan olemme onnistuneesti toteuttaneet projekteja kaikessa monimuotoisuudessa - yksittäisistä huonekaluelementeistä kokonaisiin tilaratkaisuihin." 
                               TextColor="#495057"
                               FontSize="14"
                               LineBreakMode="WordWrap"/>
                    </StackLayout>
                </Frame>

                <!-- Services section -->
                <Frame BackgroundColor="White" 
                       CornerRadius="15" 
                       Padding="25"
                       HasShadow="True"
                       BorderColor="#E9ECEF">
                    <StackLayout Spacing="15">
                        <Label Text="Palvelumme" 
                               TextColor="#2C7873"
                               FontSize="20"
                               FontAttributes="Bold"/>
                        <StackLayout Spacing="10">
                            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                                <Label Text="" FontSize="14"/>
                                <Label Text="Mittatilaustyöt - kaapit, hyllyt, komerot" 
                                       TextColor="#495057" FontSize="14" Grid.Column="1"/>
                            </Grid>
                            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                                <Label Text="" FontSize="14"/>
                                <Label Text="Suunnittelu ja konsultointi" 
                                       TextColor="#495057" FontSize="14" Grid.Column="1"/>
                            </Grid>
                            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                                <Label Text="" FontSize="14"/>
                                <Label Text="Asennus ja huolto" 
                                       TextColor="#495057" FontSize="14" Grid.Column="1"/>
                            </Grid>
                            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                                <Label Text="" FontSize="14"/>
                                <Label Text="Materiaalien valinta ja värisuunnittelu" 
                                       TextColor="#495057" FontSize="14" Grid.Column="1"/>
                            </Grid>
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!-- Why choose us section -->
                <Frame BackgroundColor="#E8F4F3" 
                       CornerRadius="15" 
                       Padding="25"
                       HasShadow="True"
                       BorderColor="#2C7873">
                    <StackLayout Spacing="15">
                        <Label Text="Miksi valita meidät?" 
                               TextColor="#2C7873"
                               FontSize="20"
                               FontAttributes="Bold"/>
                        <StackLayout Spacing="8">
                            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                                <Label Text="✓" TextColor="#2C7873" FontSize="14" FontAttributes="Bold"/>
                                <Label Text="Nopea ja tarkka hinnoittelu" 
                                       TextColor="#495057" FontSize="14" Grid.Column="1"/>
                            </Grid>
                            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                                <Label Text="✓" TextColor="#2C7873" FontSize="14" FontAttributes="Bold"/>
                                <Label Text="Modernit suunnittelutyökalut" 
                                       TextColor="#495057" FontSize="14" Grid.Column="1"/>
                            </Grid>
                            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                                <Label Text="✓" TextColor="#2C7873" FontSize="14" FontAttributes="Bold"/>
                                <Label Text="Laadukkaat eurooppalaiset materiaalit" 
                                       TextColor="#495057" FontSize="14" Grid.Column="1"/>
                            </Grid>
                            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                                <Label Text="✓" TextColor="#2C7873" FontSize="14" FontAttributes="Bold"/>
                                <Label Text="Ammattitaitoinen asennustiimi" 
                                       TextColor="#495057" FontSize="14" Grid.Column="1"/>
                            </Grid>
                        </StackLayout>
                    </StackLayout>
                </Frame>

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>