<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PintaLab.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="PintaLab">

    <Grid>
        <!-- Background image with overlay -->
        <Image Source="background.png"
           Aspect="AspectFill"
           Grid.RowSpan="3" />

        <BoxView Color="#80000000"
             Opacity="0.6"
             Grid.RowSpan="3"/>

        <Grid RowDefinitions="Auto, *, Auto">
            <!-- Header section -->
            <Grid RowDefinitions="Auto, Auto" Padding="20,10">
                <!-- Logo and user status area -->
                <Grid ColumnDefinitions="Auto, *, Auto" Grid.Row="0">
                    <Image Grid.Column="0"
                           Source="logo.png"
                           HeightRequest="110"
                           WidthRequest="200"
                           HorizontalOptions="Start"/>

                    <!-- User login status display -->
                    <StackLayout Grid.Column="1"
                                HorizontalOptions="End"
                                VerticalOptions="Center"
                                Spacing="5">
                        <Label x:Name="UserStatusLabel"
                               Text="Tervetuloa!"
                               TextColor="White"
                               FontSize="16"
                               HorizontalOptions="Center"/>
                        <Button x:Name="LogoutButton"
                                Text="Kirjaudu ulos"
                                Clicked="OnLogoutClicked"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                BorderColor="White"
                                BorderWidth="1"
                                HeightRequest="30"
                                FontSize="12"
                                IsVisible="False"
                                HorizontalOptions="Center"/>
                    </StackLayout>

                    <BoxView Grid.Column="2" Color="Transparent"/>
                </Grid>

                <!-- Horizontal navigation menu -->
                <ScrollView Grid.Row="1" 
                          HorizontalScrollBarVisibility="Never"
                          VerticalOptions="Center"
                          Margin="0,10,0,0">

                    <StackLayout Orientation="Horizontal" 
                               Spacing="8"
                               HorizontalOptions="Center">
                        <!-- Navigation buttons -->
                        <Button Text="Tietoa meistä" 
                                Clicked="OnAboutClicked" 
                                BackgroundColor="Transparent"
                                TextColor="White"
                                BorderColor="White"
                                BorderWidth="1"
                                CornerRadius="5"
                                Padding="12,6"
                                FontSize="14"
                                FontAttributes="Bold"
                                HeightRequest="32"/>
                        <Button Text="Tilaa" 
                                Clicked="OnOrderClicked"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                BorderColor="White"
                                BorderWidth="1"
                                CornerRadius="5"
                                Padding="12,6"
                                FontSize="14"
                                FontAttributes="Bold"
                                HeightRequest="32"/>
                        <Button Text="Kirjaudu" 
                                Clicked="OnLoginClicked"
                               BackgroundColor="Transparent"
                                TextColor="White"
                                BorderColor="White"
                                BorderWidth="1"
                                CornerRadius="5"
                                Padding="12,6"
                                FontSize="14"
                                FontAttributes="Bold"
                                HeightRequest="32"
                                x:Name="LoginButton"/>
                        <Button Text="Tilaukset" 
                                Clicked="OnMyOrdersClicked"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                BorderColor="White"
                                BorderWidth="1"
                                CornerRadius="5"
                                Padding="12,6"
                                FontSize="14"
                                FontAttributes="Bold"
                                HeightRequest="32"
                                x:Name="MyOrdersButton"/>
                        <Button Text="Portfolio" 
                                Clicked="OnPortfolioClicked"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                BorderColor="White"
                                BorderWidth="1"
                                CornerRadius="5"
                                Padding="12,6"
                                FontSize="14"
                                FontAttributes="Bold"
                                HeightRequest="32"/>
                        <Button Text="Yhteys" 
                                Clicked="OnContactsClicked"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                BorderColor="White"
                                BorderWidth="1"
                                CornerRadius="5"
                                Padding="12,6"
                                FontSize="14"
                                FontAttributes="Bold"
                                HeightRequest="32"/>
                        <Button Text="Admin" 
                                Clicked="OnAdminClicked"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                BorderColor="White"
                                BorderWidth="1"
                                CornerRadius="5"
                                Padding="12,6"
                                FontSize="14"
                                FontAttributes="Bold"
                                HeightRequest="32"/>
                    </StackLayout>
                </ScrollView>
            </Grid>

            <!-- Main content area -->
            <StackLayout Grid.Row="1"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Spacing="20">
                <Label Text="PintaLab"
                       TextColor="White"
                       FontSize="36"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>

                <Label Text="Innovatiivisia ratkaisuja sisustukseesi"
                       TextColor="White"
                       FontSize="20"
                       HorizontalTextAlignment="Center"/>

                <!-- Main call-to-action button -->
                <Button Text="Aloita tilaaminen"
                        Clicked="OnOrderClicked"
                        BackgroundColor="#2C7873"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        WidthRequest="200"
                        FontSize="16"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"/>
            </StackLayout>

            <!-- Footer section -->
            <Label Grid.Row="2"
                   Text="PintaLab - Laadukkaat kaappien suunnittelupalvelut"
                   HorizontalOptions="Center"
                   VerticalOptions="End"
                   TextColor="White"
                   FontSize="14"
                   Margin="0,0,0,20"/>
        </Grid>
    </Grid>
</ContentPage>